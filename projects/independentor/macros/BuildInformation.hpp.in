#pragma once

//  Generated by CMake's configure_file():
//      refers .in file to fix.
//          why do we notion like this format? 1 ~~ % 100?:
//              Imagine that today is 8th July. Then CMake kindly generate WRD_BUILD_DATE_DAY's value to 08, and boom.
//              beautiful compile error make a grin to you :)
//              To avoid compiler assume that value to "octal" expression, we should do some "tricky" thing.
#define WRD_BUILD_DATE_YEAR          @BUILD_DATE_YEAR@
#define WRD_BUILD_DATE_MONTH        (1@BUILD_DATE_MONTH@ % 100)  //  == @BUILD_DATE_MONTH@
#define WRD_BUILD_DATE_DAY          (1@BUILD_DATE_DAY@ % 100)    //  == @BUILD_DATE_DAY@
#define WRD_BUILD_DATE              "@BUILD_DATE@"             
#define WRD_BUILD_TIME_HOUR          (1@BUILD_TIME_HOUR@ % 100)    //  == @BUILD_TIME_HOUR@
#define WRD_BUILD_TIME_MINUTE        (1@BUILD_TIME_MINUTE@ % 100)  //  == @BUILD_TIME_MINUTE@
#define WRD_BUILD_TIME_SECOND        (1@BUILD_TIME_SECOND@ % 100)  //  == @BUILD_TIME_SECOND@
#define WRD_BUILD_TIME              "@BUILD_TIME@"
#define WRD_BUILD_VERSION_MAJOR      @VERSION_MAJOR@
#define WRD_BUILD_VERSION_MINOR      @VERSION_MINOR@
#define WRD_BUILD_VERSION_FIX        @VERSION_FIX@
#define WRD_BUILD_VERSION_NAME		"@VERSION_NAME@"
#define WRD_BUILD_VERSION_VALUE     "@VERSION_VALUE@"
#define WRD_BUILD_VERSION			"@VERSION@"
#define WRD_BUILD_TYPENAME          "@CMAKE_BUILD_TYPE@"
#define WRD_BUILD_PLATFORM_NAME      "@CMAKE_SYSTEM_NAME@"
#define WRD_BUILD_PLATFORM_VERSION  "@CMAKE_SYSTEM_VERSION@"
#define WRD_TYPE_LINUX				1
#define WRD_TYPE_WINDOWS			2
#ifdef __linux__
#    define WRD_BUILD_PLATFORM       WRD_TYPE_LINUX
#    define WRD_BUILD_PLATFORM_IS_LINUX
#endif
#ifdef WIN32
#    define WRD_BUILD_PLATFORM        WRD_TYPE_WINDOWS
#    define WRD_BUILD_PLATFORM_IS_WINDOWS
#endif
