options {
  OUTPUT_LANGUAGE = "c++";
  NAMESPACE = "NE";
  PARSER_INCLUDES = "../parser_include.hpp";
}

PARSER_BEGIN(PRParser)
void setPreferencer(Preferencer* preferencer) {
    _preferencer = preferencer;
}
private:
    Preferencer* _preferencer;
    std::string _class;
public:
PARSER_END(PRParser)




//////////////////////////////////////
//  syntax:                         //
//////////////////////////////////////
SKIP:
{
    " "
}

TOKEN:
{   <DOUBLE_QUOTATION: "\"">
}

TOKEN:
{   <EOL: "\n" | "\r" | "\r\n"> // end of line
|   <NUMBER: ["0" - "9"] >
|   <ALPHABET: ["a"-"z","A"-"Z"] >
|   <SYMBOL: ["!", "@", "#", "$", "%", "^", "&", "*", "(", ")", "\\", "+", "|", "~", ";", "[", "]", "'", "/", ".", ",", "\0" ] >
}

SPECIAL_TOKEN:
{
    <TAB: "\t">
}

TOKEN:
{   <CLASS: "class">
|   <ASSIGN: "=">
|   <STRING: "string">
|   <INT: "int">
|   <BOOL: "bool">
|   <FLOAT: "float">
|   <CHAR: "char">
}

TOKEN:
{   <BOOL_EXPR: "true" | "false" >
|   <CHAR_EXPR: "\'" (<LETTER>)? "\'" >
|   <FLOAT_EXPR: (<NUMBER>)+ "." (<NUMBER>)+ >
|   <INT_EXPR: (<NUMBER>)+ >
|   <LETTER: (<ALPHABET> | <NUMBER> | <SYMBOL>) >
}

TOKEN:
{   <IDENTIFIER: (<ALPHABET> | "_")+ (<NUMBER> | <ALPHABET> | "_")* >
|   <LETTERS: (<LETTER>)+ >
}



//////////////////////////////////////
//  sementic:                       //
//////////////////////////////////////
Token* char_expr() : {Token* expr;}
{
    expr=<CHAR_EXPR>
    {
        return expr;
    }
}
Token* int_expr() : {Token* expr;}
{
    (expr=<NUMBER> | expr=<INT_EXPR>)
    {
        return expr;
    }
}
Token* string_expr() : {Token* expr;}
{
    <DOUBLE_QUOTATION> (expr=<LETTERS>|expr=<IDENTIFIER>) <DOUBLE_QUOTATION>
    {
        return expr;
    }
}
Token* bool_expr() : {Token* expr;}
{
    expr=<BOOL_EXPR>
    {
        return expr;
    }
}
Token* float_expr() : {Token* expr;}
{
    expr=<FLOAT_EXPR>
    {
        return expr;
    }
}

void statement() : {Token* key; Token* value;}
{
    (<INT> key=<IDENTIFIER> <ASSIGN> value=int_expr()      |
    <FLOAT> key=<IDENTIFIER> <ASSIGN> value=float_expr()   |
    <CHAR> key=<IDENTIFIER> <ASSIGN> value=char_expr()     |
    <STRING> key=<IDENTIFIER> <ASSIGN> value=string_expr() |
    <BOOL> key=<IDENTIFIER> <ASSIGN> value=bool_expr()     )
    {
        if(hasError) return;
        WRD_INFO("found %s = %s", key->image.c_str(), value->image.c_str());
        _preferencer->onAddMember(_class, key->image, value->image);
    }
}

void statements() : {}
{
    statement() (
        LOOKAHEAD(<EOL> statement()) <EOL> statement() | 
        <EOL>
    )*
    {
        _class = "";
        WRD_INFO("...statements end")
    }
}

void class_declaration() : {Token* klass;}
{
    <CLASS> klass=<IDENTIFIER> <EOL>
    {
        if(hasError) return;
        
        _class = klass->image;
        _preferencer->onAddClass(_class);
        WRD_INFO("class_declaration = \"%s\"", _class.c_str())
    }
}

