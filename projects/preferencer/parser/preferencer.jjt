//////////////////////////////////////
//  syntax:                         //
//////////////////////////////////////
SKIP:
{
    " "
}

TOKEN:
{   <EOL: "\n" | "\r" | "\r\n"> // end of line
|   <NUMBER: ["0" - "9"] >
|   <ALPHABET: ["a"-"z","A"-"Z"] >
|   <SYMBOL: ["!", "@", "#", "$", "%", "^", "&", "*", "(", ")", "\"", "\\", "+", "|", "~", ";", "[", "]", "'", "/", ".", ",", "\0" ] >
}

SPECIAL_TOKEN:
{
    <TAB: "\t">
}

TOKEN:
{   <BOOL_EXPR: "true" | "false" >
|   <CHAR_EXPR: "\'" (<LETTER>)? "\'" >
|   <STRING_EXPR: "\"" (<LETTER>)* "\"">
|   <FLOAT_EXPR: (<NUMBER>)+ "." (<NUMBER>)+ >
|   <INT_EXPR: (<NUMBER>)+ >
|   <LETTER: (<ALPHABET> | <NUMBER> | <SYMBOL>) >
|   <CLASS: "class">
|   <ASSIGN: "=">
|   <STRING: "string">
|   <INT: "int">
|   <BOOL: "bool">
|   <FLOAT: "float">
|   <CHAR: "char">
}

TOKEN:
{   <IDENTIFIER: (<ALPHABET> | "_")+ (<NUMBER> | <ALPHABET> | "_")* >
}



//////////////////////////////////////
//  sementic:                       //
//////////////////////////////////////
Token* char_expr() : {Token* expr;}
{
    expr = <CHAR_EXPR>
    {
        cout << "char_expr = " << expr->image << "\n";
        return expr;
    }
}
Token* int_expr() : {Token* expr;}
{
    (expr = <NUMBER> | expr = <INT_EXPR>)
    {
        cout << "int_expr = " << expr->image << "\n";
        return expr;
    }
}
Token* string_expr() : {Token* expr;}
{
    expr = <STRING_EXPR>
    {
        cout << "string_expr = " << expr->image << "\n";
        return expr;
    }
}
Token* bool_expr() : {Token* expr;}
{
    expr = <BOOL_EXPR>
    {
        cout << "bool_expr = " << expr->image << "\n";
        return expr;
    }
}
Token* float_expr() : {Token* expr;}
{
    expr = <FLOAT_EXPR>
    {
        cout << "float_expr = " << expr->image << "\n";
        return expr;
    }
}

void statement() : {Token* key; Token* value;}
{
    key=<IDENTIFIER> <ASSIGN> (value=int_expr() | value=float_expr() | value=bool_expr() | value=string_expr() | value=char_expr())
    {
        cout << "key = " << key->image << ", value = " << value->image << "\n";
        return;
    }
}

void statements() : {}
{
    statement() (<EOL> statement())*
    {
        cout << "statements end\n";
    }
}

void class_declaration() : {Token* klass;}
{
    <CLASS> klass=<IDENTIFIER> <EOL>
    {
        cout << "class_declaration = " << klass->image << "\n";
        return;
    }
}

